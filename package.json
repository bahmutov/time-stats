{
  "name": "time-stats",
  "description": "Node preload to replace console.time calls with better ones.",
  "version": "0.0.0-semantic-release",
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "bugs": "https://github.com/bahmutov/time-stats/issues",
  "config": {
    "pre-git": {
      "commit-msg": "simple",
      "pre-commit": [
        "npm prune",
        "npm run deps",
        "npm test",
        "npm run ban",
        "echo timing using regular console.time",
        "npm run e2e:regular",
        "echo timing time-stats console.time",
        "npm run e2e"
      ],
      "pre-push": [
        "npm run secure",
        "npm run license",
        "npm run ban -- --all",
        "npm run size"
      ],
      "post-commit": [],
      "post-merge": []
    }
  },
  "engines": {
    "node": ">=6"
  },
  "files": [
    "src/*.js",
    "!src/*-spec.js"
  ],
  "homepage": "https://github.com/bahmutov/time-stats#readme",
  "keywords": [
    "console",
    "node",
    "replace",
    "require",
    "stats",
    "time",
    "timing"
  ],
  "license": "MIT",
  "main": "src/",
  "noScopeName": "time-stats",
  "publishConfig": {
    "registry": "http://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/time-stats.git"
  },
  "scripts": {
    "ban": "ban",
    "deps": "deps-ok",
    "format": "standard-format -w src/*.js",
    "issues": "git-issues",
    "license": "license-checker --production --onlyunknown --csv",
    "lint": "standard --verbose src/*.js",
    "pretest": "npm run format && npm run lint",
    "secure": "nsp check",
    "size": "t=\"$(npm pack .)\"; wc -c \"${t}\"; tar tvf \"${t}\"; rm \"${t}\";",
    "test": "npm run unit",
    "unit": "mocha src/*-spec.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "e2e": "NODE_PATH=.. node -r time-stats test/index.js",
    "e2e:regular": "node test/index.js",
    "e2e:cover": "nyc node test/included.js; nyc report --reporter=html"
  },
  "devDependencies": {
    "ban-sensitive-files": "1.8.3",
    "deps-ok": "1.1.0",
    "git-issues": "1.2.0",
    "license-checker": "5.1.2",
    "mocha": "2.5.3",
    "nsp": "2.6.1",
    "nyc": "7.0.0",
    "pre-git": "3.10.0",
    "semantic-release": "^4.3.5",
    "standard": "7.1.2",
    "standard-format": "2.2.2"
  }
}
